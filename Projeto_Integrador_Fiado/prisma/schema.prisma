generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Companies {
  id        Int       @in @default(autoincrement())
  name      String    
  category  String
  cnpj      String
  places    String
  zip_code  String
  addrres   String
  phone     String
  productId           @map("produc_id")
  userId              @map("user_id")
  products  Products  @relation(filds: [productId], references:[id])
  uses      User      @relation(filds: [userId], references:[id])
  createAt  DateTime  @default(now())
  updateAt  DateTime  @updateAt
  
  @@map("companies")

}

